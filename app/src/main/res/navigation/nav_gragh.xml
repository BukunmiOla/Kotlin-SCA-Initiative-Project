<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_gragh"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.scainitiative.kotlinscainitiativeproject.NoteListFragment"
        android:label="fragment_note_list"
        tools:layout="@layout/fragment_note_list" >
        <action
            android:id="@+id/action_noteListFragment_to_showNoteFragment"
            app:destination="@id/showNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/showNoteFragment"
        android:name="com.scainitiative.kotlinscainitiativeproject.ShowNoteFragment"
        android:label="fragment_show_note"
        tools:layout="@layout/fragment_show_note" >
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>